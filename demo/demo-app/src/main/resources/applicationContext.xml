<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="com.alibaba.sofa" /><!-- Scan SOFA framework-->
    <context:component-scan base-package="com.threequick.crm" /><!-- Scan Application-->

	<bean id="bootstrap" class="com.alibaba.sofa.boot.Bootstrap" init-method="init">
		<property name="packages">
			<list>
				<value>com.threequick.crm</value>
			</list>
		</property>
	</bean>
</beans>